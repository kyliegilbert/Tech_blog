<div class = "text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    
</div>

    <h2 class = "text-center">
        Please leave a comment!
    </h2>
<div class="leave-comment container d-flex">

  
    <form class='comment_form'>
      
      <label for='comment'>
        Comment:
      </label>
      <br />
      <textarea id='comment' name='comment' rows='5' cols='30'>
        {{comment}}
      </textarea>
      <br />
      <label for='comment_author'>
        Name:
      </label>
      <br />
      <textarea id='comment_author' name='comment_author' rows='2' cols='30'>
        {{name}}
      </textarea>
      <br />
      <br />
    
      <button type='submit' value='Submit'>
        Submit comment!
      </button>
    </form>




    {{#if comments.length}}
    <div class="col-md-6 blog-list">
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4>{{comment.comment}}</h4>
        </div>
        <div>
          <p>comment by {{comment.name}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
    </div>

</div>

<script src="/js/blog.js"></script>